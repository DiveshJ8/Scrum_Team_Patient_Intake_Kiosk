<html>
    <head>
        <meta name = "viewport" content = "width=device-width,initial-scale=1" />
        <%= stylesheet_link_tag "userinsurance.css" %>
        <%= stylesheet_link_tag "progressbar.css" %>
    </head>
    <body>
        <section class = "insurance">
            <div class = "titlediv" id = "titlediv">
                   <select onChange="window.location.href=this.value">
                        <option value="none">Select a Page</option>
                        <option value="/userdetails">Patient Info</option>
                        <option value="/userinsurance">Patient Insurance</option>
                        <option value="/userhealth">Patient Health</option>
                        <option value="/userconsent">Patient Consent</option>
                        <option value="/userdemographics">Patient Demographics</option>
                    </select>
            </div>  

            <section class = "progressbar_main">
                <%= render partial: "kioskpages/progressbar", :locals => {:progval1 => "11000"} %>
            </section>
             
            
            <div class = "rowinput">
                <div class = "fieldname alias">
                    <h3>Insurance No: *</h3>
                    <input type = "text" id = "insur_no" placeholder="Insurance ID" />   
                </div>
            </div>  
            <div class = "rowinput">
                <div class = "fieldname alias">
                    <h3>RxBIN: </h3>
                    <input type = "text" id = "rxbin" placeholder="RxBIN" />
                </div>
                <div class = "fieldname alias">
                    <h3>RxPCN: </h3>
                    <input type = "text" id = "rxpcn" placeholder="RxPCN" />
                </div>
                <div class = "fieldname alias">
                    <h3>RxGROUP: </h3>
                    <input type = "text" id = "rxgroup" placeholder="RxGROUP" />
                </div>
            </div> 
            <div class = "rowinput">
                <div class = "fieldname alias">
                    <h3>Insurance Type: </h3>
                    <input type = "text" id = "insurance" placeholder="RxBIN" />
                </div>
                <div class = "fieldname alias">
                    <h3>Provider: </h3>
                    <input type = "text" id = "provider" placeholder="RxPCN" />
                </div>
                <div class = "fieldname alias">
                    <h3>Priority: </h3>
                    <input type = "text" id = "priority" placeholder="Primary or Seconday Healthcare" />
                </div>
            </div> 
            <div class = "submitbtn">
                <button id = "back">Back</button>
                <button id = "next">Next</button>
            </div>  
            
            
            
        </section>
        
        
        
        <%= javascript_pack_tag "userinsurance.js" %>
        
       
    </body>
</html>



